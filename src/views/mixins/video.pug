mixin video(video)
  a(href=`/videos/${video.id}`)
    .video__box#videoBox
      if video.thumbPath
        img.video__box--thumb#thumb(src=video.thumbPath alt=video.title)
      else
        img.video__box--thumb#thumb(src='/static/images/thumb.png' alt=video.title + 'without thumbnail')
      .video__box__info#infoBox
        span.video__info--title=video.title
        .video__box__info--meta
          span=video.uploader.username
