extends ../../layout

block contents 
  .profile__edit
    form(method="post" enctype="multipart/form-data")
      label(for="avatar") Avatar image
        input#avatar(type="file", name="avatar" accept="image/*" required)
      label(for="username") Username
        input#userame(type="text", name="username" required)
      input(type="submit", value="Update Profile")
  .profile__bottom
    a(href="/users/change-password")
      span Change Password
      span.material-icons.material-icons-outlined arrow_forward