extends ../../layout
include ../../mixins/video

block contents 
  .search__container 
    form(method="get")
      span Please select search option
      .search__select-option
        input#option1(type="radio", name="option", value="title" checked)
        label(for="option1") Title 
        input#option2(type="radio", name="option", value="tags")
        label(for="option2") Tags 
      label(for="keyword") Keyword
        input#keyword(type="text", name="keyword" required)
      button
        span.material-icons.material-icons-outlined search
  .search__result.video__grid
    if videos
      each video in videos
        +video(video)
      else
        span No video found